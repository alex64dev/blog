{% extends 'admin/base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des posts</h1>
        {% if delete is defined %}
            {{ delete|raw }}
        {% endif %}

        {% if new is defined %}
            {{ new|raw }}
        {% endif %}

        <div class="row">
            <div class="col-md-12">
                <div class="d-flex">
                    <a href="/admin/post/new" class="btn btn-primary ms-auto">Ajouter un post</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Création</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <th scope="row">
                                <a href="/admin/post/edit/{{ post.getId() }}">
                                    {{ post.getName() }}
                                </a>
                            </th>
                            <td>{{ post.getCreatedAt()|date('d F Y') }}</td>
                            <td>
                                <a href="/admin/post/edit/{{ post.getId() }}" class="btn btn-primary">Éditer</a>
                                <form action="/admin/post/delete/{{ post.getId() }}"
                                      style="display: inline"
                                      method="POST"
                                      onsubmit="return confirm('Voulez-vous supprimer ce post ?')">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between my-4">
                {{ paginate.previousLink('/admin/posts') }}

                {{ paginate.nextLink('/admin/posts') }}
            </div>
        </div>
    </div>
{% endblock %}