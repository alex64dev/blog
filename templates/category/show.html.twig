{% extends 'base.html.twig' %}

{% block title %}Cat√©gorie {{ category.getName() }}{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h1 class="card-title text-center">{{ category.getName() }}</h1>

        <div class="d-flex justify-content-center">
            <img src="{% if category.getId() %}{{ category.getRealPath() }}{% else %}/images/no-image-icon.png{% endif %}" class="my-4" alt="categorie image" width="150px" height="auto">
        </div>

        <div class="row">
            {% for post in posts %}
                {% include('layout/postCard.html.twig') %}
            {% endfor %}

            <div class="d-flex justify-content-between my-4">
                {{ paginate.previousLink("/blog/category/"~category.getSlug()~"-"~category.getId()) }}

                {{ paginate.nextLink("/blog/category/"~category.getSlug()~"-"~category.getId()) }}
            </div>
        </div>
    </div>
{% endblock %}